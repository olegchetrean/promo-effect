# Database
DATABASE_URL="postgresql://user:password@localhost:5432/promo_efect"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Email (SendGrid or AWS SES)
EMAIL_PROVIDER=sendgrid  # or ses
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@promo-efect.com
SENDGRID_FROM_NAME="Promo-Efect"

# SMS/WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Container Tracking
TERMINAL49_API_KEY=your_terminal49_key

# File Storage
STORAGE_PROVIDER=local  # or s3
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=promo-efect-uploads
AWS_REGION=eu-central-1

# AI
GEMINI_API_KEY=your_gemini_key
OPENAI_API_KEY=your_openai_key  # for document parsing

# Redis (for Bull queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Gmail (for email sync)
GMAIL_CLIENT_ID=your_client_id
GMAIL_CLIENT_SECRET=your_client_secret
GMAIL_REDIRECT_URI=http://localhost:3001/api/auth/gmail/callback
